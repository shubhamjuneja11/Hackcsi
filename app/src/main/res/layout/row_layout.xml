<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnCount="2"
    android:rowCount="7">

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:text="Book Name"
        android:textColor="#000"
        android:layout_gravity="left|top"
        android:textSize="20sp"
        android:padding="4sp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:layout_gravity="right|top"
        android:text="Angels"
        android:padding="4sp"
        android:textSize="20sp"
        android:id="@+id/b_name"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:text="Book Year"
        android:textColor="#000"
        android:layout_gravity="left|top"
        android:textSize="20sp"
        android:padding="4sp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:layout_gravity="right|top"
        android:text="2011"
        android:padding="4sp"
        android:textSize="20sp"
        android:id="@+id/b_year"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:text="Book Author"
        android:textColor="#000"
        android:layout_gravity="left|top"
        android:textSize="20sp"
        android:padding="4sp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:layout_gravity="right|top"
        android:text="Book Merian Angels"
        android:padding="4sp"
        android:textSize="20sp"
        android:id="@+id/b_author"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:text="Book M.R.P."
        android:textColor="#000"
        android:layout_gravity="left|top"
        android:textSize="20sp"
        android:padding="4sp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:layout_gravity="right|top"
        android:text="INR 150"
        android:padding="4sp"
        android:textSize="20sp"
        android:id="@+id/b_mrp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:text="Your Name"
        android:textColor="#000"
        android:layout_gravity="left|top"
        android:textSize="20sp"
        android:padding="4sp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:layout_gravity="right|top"
        android:text="Ravi Prakash"
        android:padding="4sp"
        android:textSize="20sp"
        android:id="@+id/y_name"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:text="Your Address"
        android:textColor="#000"
        android:layout_gravity="left|top"
        android:textSize="20sp"
        android:padding="4sp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:layout_gravity="right|top"
        android:text="ABC, DEF Nagar, New Delhi- 110065"
        android:padding="4sp"
        android:textSize="20sp"
        android:id="@+id/y_address"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:text="Your Phone Number"
        android:textColor="#000"
        android:layout_gravity="left|top"
        android:textSize="20sp"
        android:padding="4sp"/>

    <TextView
        android:layout_rowSpan="1"
        android:layout_columnWeight="1"
        android:layout_gravity="right|top"
        android:text="7042337414"
        android:padding="4sp"
        android:textSize="20sp"
        android:id="@+id/y_phone"/>

</GridLayout>
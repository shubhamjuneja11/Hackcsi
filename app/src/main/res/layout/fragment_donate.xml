<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="probeginners.hackcsi.view.fragments.DonateFragment"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="Book Name"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Angels"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:id="@+id/b_name"
                    android:gravity="center"/>

                <TextView
                    android:text="Year Of Publishing"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="2011"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:id="@+id/b_year"
                    android:gravity="center"/>

                <TextView
                    android:text="Author"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Merian Angels"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:id="@+id/b_author"
                    android:gravity="center"/>

                <TextView
                    android:text="M.R.P."
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="INR 150"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:id="@+id/b_mrp"
                    android:gravity="center"/>

                <TextView
                    android:text="Your Name"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ravi Prakash"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:id="@+id/y_name"
                    android:gravity="center"/>

                <TextView
                    android:text="Your Address"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ABC, DEF Nagar, New Delhi- 110065"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:id="@+id/y_address"
                    android:gravity="center"/>

                <TextView
                    android:text="Your Phone Number"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:padding="5sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="7042337414"
                    android:padding="5sp"
                    android:textSize="20sp"
                    android:id="@+id/y_phone"
                    android:gravity="center"/>

            </LinearLayout>
        </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:padding="20sp"
        android:backgroundTint="#ff0000"
        android:text="SUBMIT"
        android:id="@+id/button"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_gravity="bottom"
        android:layout_weight="1"/>

</LinearLayout>
